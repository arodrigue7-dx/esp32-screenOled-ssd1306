#include <Wire.h>
#include <Adafruit_GFX.h>
#include <Adafruit_SSD1306.h>

#define SCREEN_WIDTH 128 // Amplada de la pantalla OLED, en píxels
#define SCREEN_HEIGHT 64 // Alçada de la pantalla OLED, en píxels

// Crea un objecte OLED connectat per I2C
Adafruit_SSD1306 oled(SCREEN_WIDTH, SCREEN_HEIGHT, &Wire, -1);

void setup() {
  Serial.begin(9600);

  // Inicialitza la pantalla OLED amb l'adreça I2C 0x3C
  if (!oled.begin(SSD1306_SWITCHCAPVCC, 0x3C)) {
    Serial.println(F("No s'ha pogut iniciar la pantalla OLED SSD1306"));
    while (1);
  }

  delay(1000);         // Espera un segon per inicialitzar
  oled.clearDisplay(); // Neteja la pantalla

  oled.setTextSize(1);         // Mida del text
  oled.setTextColor(WHITE);    // Color del text

  // Animació de desplaçament del text
  for (int x = SCREEN_WIDTH; x >= 0; x -= 5) {
    oled.clearDisplay();
    oled.setCursor(x, 25);     // Posició del text
    oled.println("Robotronix"); 
    oled.display();
    delay(100);
  }

  delay(1000); // Pausa final
}

void loop() {
  // Aquí pots afegir funcionalitat futura
}
